@section scripts
{
<script type="text/javascript">
    var _baseUrl = '/UCenter/Department';
    var _apiUrl = '/api/UCenter/Department';
    var _pageUrl = '';
    jQuery(function () {
        jQuery('#tt').tree({
            url: _apiUrl + '/EditTree?' + _pageUrl,
            animate: true,
            dnd: true,
            onDblClick: function (node) {
                jQuery('#tt').tree('beginEdit', node.target);
            },
            onLoadSuccess: function (node, data) {
                jQuery("#tt").tree('collapseAll');
            },
            onAfterEdit: function (node) {
                jQuery.ajax({
                    url: _apiUrl + '/SaveEditTreeField',
                    type: 'post',
                    dataType: 'json',
                    data: {
                        id: node.id,
                        value: node.text
                    },
                    success: function (data) {
                        if (data.success) {
                            var node = $('#tt').tree('getRoot');
                        } else {
                            alert(data.message);
                        }
                        jQuery('#tt').tree("reload", node);
                    }
                });
            },
            onDrop: function (target, source, point) {

                var targetId = jQuery('#tt').tree('getNode', target).id;

                jQuery.ajax({
                    url: _apiUrl + '/SaveEditTree',
                    type: 'post',
                    dataType: 'json',
                    data: {
                        id: source.id,
                        targetId: targetId,
                        point: point
                    },
                    success: function (data) {
                        if (data.success) {
                            var node = jQuery('#tt').tree('getRoot');
                        } else {
                            alert(data.message);
                        }
                        jQuery('#tt').tree("reload", node);
                    }
                });
            }
        });
    });

</script>
}