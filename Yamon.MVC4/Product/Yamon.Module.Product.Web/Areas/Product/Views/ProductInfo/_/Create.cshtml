            beforeSubmit: function(formData, jqForm, options) {
                var queryString = jQuery.param(formData);
                if( jQuery("Upload_ImageUrl").val()==""){
                    alert("请选择你要上传的图片！");
                }
                return true;
            },
            success: function(msg) {
                eval("var result="+msg);
                if(result.Status==1){
                    jQuery("#ImageUrl").val(result.returnValue);
                    alert("上传成功!");
                    $('#Upload_ImageUrl').filebox('clear');
                    $('#Preview_ImageUrl').attr('src',result.returnValue);
                }else{
                    alert(result.returnValue);
                }
            },
            error: function(error) {
            }
        });
    }
</script>
