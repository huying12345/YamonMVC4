    MyForm.onBeforeSubmit = function () {

        $("#BirthdayYear").val($(".BirthdayYear").val())

        var month = "";

        if ($('.BirthdayMonth').val().length == 1) {
            month = "0" + $('.BirthdayMonth').val() + "-";
        }
        else {
            month = $('.BirthdayMonth').val() + "-";
        }


